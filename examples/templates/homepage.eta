      .article-thumb {
        object-fit: cover;
        width: 100%;
        height: 160px;
        border-radius: 6px;
      }
      .article-card {
        background: #fff;
        border-radius: 6px;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 1px 0 rgba(0, 0, 0, 0.03);
      }
      .ad-block {
        background: #f8f9fa;
        border: 1px dashed #ddd;
        min-height: 90px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
        font-weight: 600;
      }
      .ad-rectangle {
        min-height: 250px;
      }
      .meta {
        color: #888;
        font-size: 0.85rem;
      }
      .sticky-ad {
        position: sticky;
        top: 1rem;
      }
      /* Cookie consent full-screen overlay */
      #cookie-overlay {
        position: fixed;
        inset: 0;
        z-index: 2000;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.45);
